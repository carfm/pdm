<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textIdPrestamo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/textViewIdPrestamo"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/DetalleDocumento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="@string/buscar" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text" >
    </EditText>

    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:onClick="buscar"
        android:text="@string/buscar" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="terminarPrestamoDocumento"
        android:text="@string/terminarPrestamoDocumento" />

    <TextView
        android:id="@+id/textViewNoResultados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textViewNoResultados" />

    <ListView
        android:id="@+id/ListadoBusquedaPrestamo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>

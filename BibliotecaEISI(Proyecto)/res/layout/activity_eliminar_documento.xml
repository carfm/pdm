<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    
    tools:context=".EliminarDocumentoActivity" >

    <TextView
        android:id="@+id/textViewNoResultados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titleDocEliminar"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_gravity="center"
        android:layout_marginTop="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" >

        <TextView
            android:id="@+id/DetalleDocumento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txvId" />

        <EditText
            android:id="@+id/eEliminarIdDocumento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number" >

            <requestFocus />
        </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <Button
            android:id="@+id/btnDocEliminar"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.38"
            android:text="@string/btnEliminar"
            android:onClick="EliminarDocumento" />

        <Button
            android:id="@+id/btnDocLimpiar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnLimpiar"
            android:onClick="LimpiarField" />
    </LinearLayout>

</LinearLayout>
